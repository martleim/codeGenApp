extends layout

block content
    h1= title
    p Welcome to our test
    script(src='/javascripts/users.js')

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Name:
                |  <span id='userInfoName'></span>
                br
                strong Age:
                |  <span id='userInfoAge'></span>
                br
                strong Gender:
                |  <span id='userInfoGender'></span>
                br
                strong Location:
                |  <span id='userInfoLocation'></span>
        // /USER INFO

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Delete?
                tbody
        // /USER LIST

        // ADD USER
        h2 Add User
        #addUser
            fieldset(id="fields")
                input#inputUserName(type='text' ,name='name', placeholder='Username')
                input#inputUserEmail(type='text',name='email', placeholder='Email')
                br
                input#inputUserFullname(type='text',name='name', placeholder='Full Name')
                input#inputUserBirthday(type='date', placeholder='Birthday')
                br
                input#inputUserLocation(type='text', placeholder='Location')
                input#inputUserGender(type='text', placeholder='gender')
                br
                button#btnAddUser Add User
                
                
        // /ADD USER

    // /WRAPPER